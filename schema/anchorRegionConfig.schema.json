{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "",
    "required": [
        "indexes",
        "anchorAssembly",
        "outdir"
    ],
    "properties": {
        "indexes":  {
            "type": "array",
            "items": {
                "type": "string"
            },  
            "description": "a list of paths to indexes to anchor"
        },
        "anchorAssembly":  {
            "type": "string",
            "description": "path to fasta file for the anchor/reference assembly"
        },
        "anchorAsmChromList": {
            "type": "array",
            "items": {
                "type": "string"
            },  
            "description": "a list anchor asm chrom names",
            "default": ["Chr01","Chr02","Chr03","Chr04","Chr05","Chr06","Chr07","Chr08","Chr09","Chr10","Chr11","Chr12","Chr13","Chr14","Chr15","Chr16","Chr17","Chr18","Chr19","Chr20"]
        },
        "outdir":  {
            "type": "string",
            "description": "outdir path"
        },
        "uniqueID":{
            "type": "string",
            "description": "unique modifier",
            "default": ""
        },
        "threads": {
            "type": "integer",
            "description": "the number of threads to use for mapping",
            "default": 32
        }
    }
}
